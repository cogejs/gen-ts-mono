{
  "name": "gen-ts-mono",
  "version": "1.2.0",
  "description": "A coge generator for building scaffold monorepos with Lerna and TypeScript tooling.",
  "author": "towyuan@outlook.com",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cogejs/gen-ts-mono.git"
  },
  "keywords": [
    "coge-generator",
    "code",
    "generator",
    "typescript",
    "ts",
    "lerna",
    "package",
    "template"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "prerelease": "yarn install && yarn run clean && yarn build:full && cross-env CI=1 yarn test:ci",
    "release": "release-it",
    "lint": "yarn run prettier:check && yarn run eslint",
    "lint:fix": "yarn run eslint:fix && yarn run prettier:fix",
    "eslint": "nb-eslint --report-unused-disable-directives --cache .",
    "eslint:fix": "yarn run eslint --fix",
    "prettier:cli": "nb-prettier \"**/*.ts\" \"**/*.js\" \"**/*.md\"",
    "prettier:check": "yarn run prettier:cli --check",
    "prettier:fix": "yarn run prettier:cli --write",
    "clean": "del 'generators/**/*' 'coverage' '.nyc_output' '*.tsbuildinfo'",
    "copyres": "cpy --dot \"src/**/*\" \"!src/**/*.ts\" \"generators\"",
    "build": "nb-tsc -b && yarn copyres && yarn prettier:fix",
    "build:full": "yarn install && yarn run clean && yarn run build",
    "pretest": "yarn run clean && yarn run build",
    "test": "yarn run jest",
    "test:ci": "yarn run jest",
    "jest": "jest",
    "posttest": "yarn run lint"
  },
  "files": [
    "README.md",
    "generators",
    "!*/__tests__"
  ],
  "dependencies": {
    "@coge/generator": "^0.7.5",
    "execa": "^8.0.1",
    "fs-extra": "^11.2.0",
    "git-remote-origin-url": "^4.0.0",
    "micromatch": "^4.0.7",
    "parse-packagejson-name": "^1.0.1",
    "tily": "^2.22.8",
    "tslib": "^2.6.2",
    "which": "^4.0.0"
  },
  "devDependencies": {
    "@nutol/build": "^0.2.20",
    "@nutol/eslint-config": "^0.2.15",
    "@nutol/ts-config": "^0.2.2",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.12",
    "@types/micromatch": "^4.0.7",
    "@types/node": "^20.12.12",
    "@types/which": "^3.0.3",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "cpy-cli": "^5.0.0",
    "cross-env": "^7.0.3",
    "del-cli": "^5.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-eslint-plugin": "^6.1.0",
    "eslint-plugin-jest": "^28.5.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "release-it": "^17.3.0",
    "ts-jest": "^29.1.4",
    "typescript": "^5.4.5"
  },
  "release-it": {
    "hooks": {
      "after:bump": "yarn"
    }
  },
  "packageManager": "yarn@4.2.2"
}
